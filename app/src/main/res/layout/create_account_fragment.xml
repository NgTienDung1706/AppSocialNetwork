<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:text="Đăng Ký"
        android:textColor="@color/st"
        android:textSize="32sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtUserName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Username"
        android:textSize="14sp"
        android:padding="15dp"
        android:textColor="@color/st"
        android:textColorHint="@color/nd" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Email"
        android:padding="15dp"
        android:textColor="@color/st"
        android:textColorHint="@color/nd"
        android:textSize="14sp" />
    <EditText
        android:id="@+id/edtPassWord"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Mật khẩu"
        android:textSize="14sp"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="@color/st"
        android:textColorHint="@color/nd" />

    <EditText
        android:id="@+id/edtConfirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_edittext"
        android:hint="Xác nhận mật khẩu"
        android:inputType="textPassword"
        android:padding="15dp"
        android:textColor="@color/st"
        android:textColorHint="@color/nd"
        android:textSize="14sp" />


    <!-- Nút đăng ký / đăng nhập -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/rd"
        android:text="Đăng Ký"
        android:textStyle="bold"
        android:textColor="@color/st"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/txtReturnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="Quay lại trang đăng nhập"
        android:textColor="@color/nd"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>
